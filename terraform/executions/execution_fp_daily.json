{
  "instance_parameters" :
  {
    "ImageId"            : "",
    "InstanceType"       : "",
    "KeyName"            : "Processor",
    "MinCount"           : 1,
    "MaxCount"           : 1,
    "SecurityGroupIds"   : ["sg-066e56297c706ac84"],
    "IamInstanceProfile" : {
      "Name" : "EC2ForcingProcessor"
    },
    "TagSpecifications"   :[
      {
          "ResourceType": "instance",
          "Tags": [
              {
                  "Key"   : "Name",
                  "Value" : "forcingprocessor"
              }
          ]
      }
  ],
    "BlockDeviceMappings":[
      {
          "DeviceName": "/dev/xvda",  
          "Ebs": {
              "VolumeSize": 64,
              "VolumeType": "gp2"  
          }
      }
    ]
  },

  "region"   : "us-east-2",
  "commands"  : [
    "runuser -l ec2-user -c 'mkdir -p /home/ec2-user/ngen-datastream/data/mount'",
    "runuser -l ec2-user -c 'mount-s3 ngen-datastream /home/ec2-user/ngen-datastream/data/mount'",
    "runuser -l ec2-user -c 'mkdir -p /home/ec2-user/$DATE/datastream-metadata'",
    "runuser -l ec2-user -c 'docker run --rm -v /home/ec2-user/$DATE:/mounted_dir datastream:latest python /ngen-datastream/python/src/datastream/configure-datastream.py --docker_mount /mounted_dir --start_date DAILY --data_path /home/ec2-user/$DATE --domain_name CONUS --forcing_split_vpu true'",
    "runuser -l ec2-user -c 'docker run --rm -v  /home/ec2-user/$DATE:/mounted_dir -u $(id -u):$(id -g) -w /datastream-metadata forcingprocessor:latest python /ngen-datastream/forcingprocessor/src/forcingprocessor/forcingprocessor.py /mounted_dir/datastream-metadata/conf_fp.json'"
  ],
  "bucket"   : "ngen-datastream",
  "obj_key"  : "daily/$DATE/$INSTANCE_TYPE/VPU_$VPU/ngen-run.tar.gz"
}
